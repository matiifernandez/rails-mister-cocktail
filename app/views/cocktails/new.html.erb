<div class="container mt-5">
  <h1>Create a new cocktail</h1>
  <%= simple_form_for @cocktail do |f|%>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Create Cocktail", class:"btn btn-success mt-3" %>
  <% end %>
  <div class="mt-3">
    <%= link_to "Back to home", cocktails_path %>
  </div>
</div>
