<div class="container mt-5">
  <h1><%= @cocktail.name %></h1>
<hr>
<% if @cocktail.photo.attached? %>
  <%= image_tag @cocktail.photo, class: "img-fluid rounded" %>
<% end %>
<hr>
  <h2> Ingredients & Doses </h2>
  <% if @cocktail.doses.any? %>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.description %> of <%= dose.ingredient.name %>
          <%= link_to 'ðŸ—‘ï¸', dose_path(dose), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete it?"},
          class: 'text-danger ms-2' %>
        </li>
      <% end %>
    </ul>
    <% else %>
      <p>No doses added yet.</p>
    <% end %>
    <div class="my-4">
      <%= link_to "Add a Dose", new_cocktail_dose_path(@cocktail), class: "btn btn-outline-primary" %>
      <%= link_to "Back to list", cocktails_path, class: "btn btn-secondary" %>
    </div>
</div>
